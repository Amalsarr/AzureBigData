{
	"name": "copyOnceWeek",
	"properties": {
		"description": "Weekly data transfer of PostTypes and Users tables from the RDS PostgreSQL database to Azure Blob storage.",
		"activities": [
			{
				"name": "Retry User Copy",
				"description": "Repeats activities to retry copying data for a specific duration.",
				"type": "Until",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@variables('UserCopyCompleted')",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Conditional User Action",
							"description": "Action based on the existence of user files",
							"type": "IfCondition",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"expression": {
									"value": "@equals(activity('Copy Users Data').output.filesWritten, 0)",
									"type": "Expression"
								},
								"ifFalseActivities": [
									{
										"name": "Set UserCopyCompleted",
										"description": "Sets the UserCopyCompleted variable to true indicating successful copy",
										"type": "SetVariable",
										"dependsOn": [],
										"policy": {
											"secureOutput": false,
											"secureInput": false
										},
										"userProperties": [],
										"typeProperties": {
											"variableName": "UserCopyCompleted",
											"value": "@bool(true)"
										}
									}
								],
								"ifTrueActivities": [
									{
										"name": "User Retry Wait",
										"description": "Wait time before retrying user data copy",
										"type": "Wait",
										"dependsOn": [],
										"userProperties": [],
										"typeProperties": {
											"waitTimeInSeconds": 1800
										}
									}
								]
							}
						},
						{
							"name": "Copy Users Data",
							"description": "Copy Users data from RDS PostgreSQL DB",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "PostgreSqlV2Source"
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "ds_Users_pg",
									"type": "DatasetReference"
								}
							]
						}
					],
					"timeout": "0.12:00:00"
				}
			}
		],
		"variables": {
			"UserCopyCompleted": {
				"type": "Boolean",
				"defaultValue": "False"
			},
			"PostTypeCopyCompleted": {
				"type": "Boolean",
				"defaultValue": "False"
			}
		},
		"annotations": []
	}
}